<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true" />

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Video Texture View" />

    <!-- Action buttons (Like, Comment, Share, Profile) on the right side -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/playPauseIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play"
            android:contentDescription="Play/Pause Icon"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="12dp"
            android:background="@drawable/circle_background" />
        <!-- Like Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_like"
                android:contentDescription="Like"
                app:tint="#000000" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Comment Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_comment"
                android:contentDescription="Comment"
                app:tint="#000000" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Share Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_share"
                android:contentDescription="Share"
                app:tint="#000000" />

            <TextView
                android:id="@+id/shareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Profile Icon (Circular mask applied here using ImageView with ShapeDrawable) -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"/>


    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#121212"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Discover Button -->
        <ImageView
            android:id="@+id/nav_discover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_discover"
            android:contentDescription="Discover"/>

        <!-- BotÃ£o de busca -->
        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_search"
            app:tint="#FFFFFF"
            android:contentDescription="Search Recipes" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
